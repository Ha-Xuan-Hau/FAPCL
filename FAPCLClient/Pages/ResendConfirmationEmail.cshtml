@page
@model ResendConfirmationEmailModel
@{
    ViewData["Title"] = "Resend Confirmation Email";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="email">Enter your email to resend confirmation:</label>
        <input type="email" id="email" name="Email" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Resend Confirmation Email</button>
</form>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger mt-3">
        @Model.ErrorMessage
    </div>
}

@if (Model.SuccessMessage != null)
{
    <div class="alert alert-success mt-3">
        @Model.SuccessMessage
    </div>
}
