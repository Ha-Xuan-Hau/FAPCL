@page
@model FAPCLClient.Pages.New.IndexModel
@{
    ViewData["Title"] = "News Management";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">News</h1>

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <strong>News List</strong>
                </div>
                <div class="card-body">
                    @if (Model.News.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Published Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var newsItem in Model.News)
                                    {
                                        <tr>
                                            <td>@newsItem.Title</td>
                                            <td>@newsItem.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-page="./Detail" asp-route-id="@newsItem.NewsId" class="btn btn-info btn-sm">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                </div>

                               
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="?currentPage=@i&title=@Model.Title&startDate=@Model.StartDate?.ToString("yyyy-MM-dd")&endDate=@Model.EndDate?.ToString("yyyy-MM-dd")">
                                            @i
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            No news items found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>