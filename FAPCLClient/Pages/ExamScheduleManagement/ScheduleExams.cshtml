@page
@model FAPCLClient.Pages.ExamScheduleManagement.ScheduleExamsModel
@{
    ViewData["Title"] = "Student Exam Schedules";
}


<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Exam Schedules</h2>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>No.</th>
                            <th>Course</th>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Exam Type</th>
                            <th>Time</th>
                            <th>Room</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ExamSchedules != null && Model.ExamSchedules.Any())
                        {
                            int count = 1;
                            @foreach (var exam in Model.ExamSchedules)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@exam.CourseName</td>
                                    <td>@(string.IsNullOrEmpty(exam.Description) ? "-" : exam.Description)</td>
                                    <td>@exam.ExamDate.ToString("dd/MM/yyyy")</td>
                                    <td>@exam.ExamType</td>
                                    <td>@exam.Time</td>
                                    <td>@exam.RoomName</td>
                                </tr>
                                count++;
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning">No exam schedules available.</div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
