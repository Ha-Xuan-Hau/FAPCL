@page
@model FAPCLClient.Pages.ExamScheduleManagement.IndexModel
@{
    ViewData["Title"] = "Exam Schedules";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Exam Schedules</h2>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Exam Schedule
        </a>
    </div>
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
        </div>
    }
    
    @if (!Model.Exams.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No exam schedules found. Create a new one to get started.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Exam Name</th>
                                <th>Course Name</th>
                                <th>Course Description</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Room</th>
                                <th>Students</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var exam in Model.Exams.OrderByDescending(e => e.ExamDate).ThenBy(e => e.StartTime))
                            {
                                <tr>
                                    <td>@exam.ExamName</td>
                                    <td>@exam.CourseName</td>
                                    <td>@(string.IsNullOrEmpty(exam.CourseDescription) ? "-" : exam.CourseDescription)</td>
                                    <td>@exam.ExamDate.ToString("yyyy-MM-dd")</td>
                                    <td>@exam.StartTime.ToString(@"hh\:mm") - @exam.EndTime.ToString(@"hh\:mm")</td>
                                    <td>@exam.RoomName</td>
                                    <td>@exam.StudentCount</td>
                                    <td>
                                        <a asp-page="Details" asp-route-id="@exam.ExamId" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a asp-page="Print" asp-route-id="@exam.ExamId" target="_blank" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-printer"></i> Print
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
