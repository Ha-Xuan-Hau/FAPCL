@page
@model IndexModel
@{
    ViewData["Title"] = "Classroom List";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-center">Danh sách lớp học</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<!-- Form lọc -->
<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="className" value="@Model.ClassName" class="form-control" placeholder="Nhập tên lớp học">
        </div>
        <div class="col-md-4">
            <select name="courseId" class="form-control">
                <option value="">-- Chọn khóa học --</option>
                @foreach (var course in Model.Courses)
                {
                    <option value="@course.CourseId" selected="@(course.CourseId == Model.SelectedCourseId)">
                        @course.CourseName
                    </option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addClassModal">Thêm lớp</button>
        </div>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Class ID</th>
            <th>Class Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Course</th>
            <th>Teacher</th>
            <th>Room</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Classes)
        {
            <tr>
                <td>@item.ClassId</td>
                <td>@item.ClassName</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>@item.CourseName</td>
                <td>@item.TeacherName</td>
                <td>@item.RoomName</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-page="./Edit" asp-route-id="@item.ClassId" class="btn btn-warning btn-sm">Chi Tiết</a>
                        <a asp-page="./EditTeacherSchedule" asp-route-ClassId="@item.ClassId" class="btn btn-info btn-sm">Chỉnh sửa slot dạy</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal thêm lớp học -->
<div class="modal fade" id="addClassModal" tabindex="-1" aria-labelledby="addClassModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addClassModalLabel">Thêm Lớp Học</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Tên Lớp</label>
                        <input type="text" name="NewClassName" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ngày Bắt Đầu</label>
                        <input type="date" name="NewStartDate" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ngày Kết Thúc</label>
                        <input type="date" name="NewEndDate" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Khóa Học</label>
                        <select name="NewCourseId" class="form-control" required>
                            <option value="">-- Chọn khóa học --</option>
                            @foreach (var course in Model.Courses)
                            {
                                <option value="@course.CourseId">@course.CourseName</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Giáo Viên</label>
                        <select name="NewTeacherId" class="form-control" required>
                            <option value="">-- Chọn giáo viên --</option>
                            @foreach (var teacher in Model.Teachers)
                            {
                                <option value="@teacher.Id">@teacher.UserName</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phòng học</label>
                        <select name="NewRoomId" class="form-control" required>
                            <option value="">-- Chọn phòng học --</option>
                            @foreach (var room in Model.Rooms)
                            {
                                <option value="@room.RoomId">
                                    @($"{room.RoomName} (Sức chứa: {room.Capacity} SV)")
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Thêm lớp</button>
                </div>
            </form>
        </div>
    </div>
</div>